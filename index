        <h5 class="alert alert-success"> <?= $_SESSION['message']; ?> </h5>
        <?php unset($_SESSION['message']);  ?>  
    <?php endif; ?>
    <!-- Clear message after displaying -->

    <div class="info-table container mt-4">
